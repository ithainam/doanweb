@using web3.Models;
@model List<Sach>
@{
    ViewBag.Title = "SachTheoChuDe";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}
@if (Model.Count == 0)
{
    <h1>@ViewBag.Sach</h1>
}

<h1>@ViewBag.Sach</h1>
@{ int i = 0;}
@foreach (var items in Model)
{
    i++;
    <div id="SanPham">
        <div id="AnhBia"><img src="@Url.Content("~/images2/"+items.AnhBia)" width="100" height="150" /></div>
        <div id="ThongTin">
            @if (items.Mota.Length < 35)
            {
                <div id="TenSach" title="@items.TenSach ">@items.Mota</div>
            }
            else
            {
                <div id="TenSach" title="@items.TenSach">@items.Mota.Substring(0, 35)...</div>
            }
        </div>


        <div id="DonGIa">@items.Gia VND</div>
    </div>
    if (i % 3 == 0)
    {
        <div style="clear:both"></div>
    }
}
