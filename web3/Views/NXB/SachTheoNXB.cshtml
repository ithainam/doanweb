@using web3.Models;
@model List<Sach>
<link href="~/Content/TrangChuCss.css" rel="stylesheet" />
@{
    ViewBag.Title = "SachTheoNXB";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<h1>@ViewBag.Sach</h1>
@{ int i = 0;}
@foreach (var items in Model)
{
    i++;
    <div id="SanPham">
        <div id="AnhBia"><img src="@Url.Content("~/images2/"+items.AnhBia)" width="100" height="150" /></div>
        <div id="ThongTin">
            @if (items.TenSach.Length < 35)
            {
                <div id="TenSach" title="@items.TenSach">@items.TenSach</div>
            }
            else
            {
                <div id="TenSach" title="@items.TenSach">@items.TenSach.Substring(0, 35)...</div>
            }
        </div>

        <div id="DonGIa">@items.Gia</div>
    </div>
    if (i % 3 == 0)
    {
        <div style="clear:both"></div>
    }
}

