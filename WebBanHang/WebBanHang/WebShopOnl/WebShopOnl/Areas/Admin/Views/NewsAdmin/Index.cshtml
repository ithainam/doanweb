@model PagedList.IPagedList<Model.EF.News>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
@section header{
    Tin tức
}
<style>
    .action a:last-child {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
        display: inline-block;
        padding: 6px 12px;
        margin-bottom: 0;
        font-size: 14px;
        font-weight: 400;
        line-height: 1.42857143;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        -ms-touch-action: manipulation;
        touch-action: manipulation;
        cursor: pointer;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        background-image: none;
        border: 1px solid transparent;
        border-radius: 4px;
    }

        .action a:last-child:hover {
            text-decoration: none;
            background-color: #d9534f;
            border-color: #d43f3a;
        }
</style>
<div class=" row">
    @using (Html.BeginForm("Index", "NewsAdmin", FormMethod.Get))
    {
        <div class="row form-group">
            <div class="col-lg-12">
                <div class="col-md-4">
                    <input type="text" value="@ViewBag.SearchOrder" class="form-control" name="searchString" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-success">Tìm kiếm</button>
                    <a class="btn btn-primary" href="/Admin/NewsAdmin/Create">Thêm mới</a>
                </div>
            </div>
        </div>}
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>

                        <th>New ID</th>
                        <th>Ngày tạo</th>
                        <th>Tiêu đề</th>
                        <th>Mô tả</th>
                        <th>Hình ảnh</th>
                        <th>Nội dung</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr id="@item.NewsID">

                        <td>@item.NewsID</td>
                        <td>
                            @item.CreateDate
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <img src="~/assets/client/images/@item.Images" style="width: 80px" />
                        </td>
                        <td> @Html.Raw(item.Detail)</td>
                        <td>
                            <a href="/Admin/NewsAdmin/Edit/@item.NewsID" class="btn btn-primary">Sua</a>
                            @Ajax.ActionLink("Xoá", "Delete", new { @id = item.NewsID }, new AjaxOptions
                            {
                                Confirm = "Bạn có muốn xoá bản ghi này?",
                                OnComplete = "$('#" + @item.NewsID + "').remove()",
                                HttpMethod = "Delete"
                            })
                        </td>

                    </tr>
                    }


                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchOrder }))
        </div>
    </div>
</div>


