@model PagedList.IPagedList<Model.EF.Feedback>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

@section header{
    Phản hồi từ khách hàng
}

<div class=" row">
    @using (Html.BeginForm("Index", "Feedback", FormMethod.Get))
    {
        <div class="row form-group">
            <div class="col-lg-12">
                <div class="col-md-4">
                    <input type="text" value="@ViewBag.SearchOrder" class="form-control" name="searchString" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-success">Tìm kiếm</button>
                    
                </div>
            </div>
        </div>}
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>

                        <th>Feedback ID</th>
                        <th>Tên khách hàng</th>
                        <th>Số điện thoại</th>
                        <th>Địa chỉ</th>
                        <th>Email</th>
                        <th>Ngày gửi</th>
                        <th>Nội dung</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.FeedbackId</td>
                            <td>@item.Name</td>
                            <td>@item.Phone</td>
                            <td>@item.Address</td>
                            <td>@item.Email</td>
                            <td>
                                @item.CreateDate
                            </td>
                            <td>
                                @item.Content
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchOrder }))
        </div>
    </div>
</div>

