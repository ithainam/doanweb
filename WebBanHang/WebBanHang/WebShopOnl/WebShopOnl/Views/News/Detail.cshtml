@model Model.EF.News
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>
    .title-news {
        text-transform: uppercase;
    }
</style>
<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v10.0&appId=162040475712588&autoLogAppEvents=1" nonce="ox20TUzC"></script>
<div class="row">
    <div class="col-md-3">
        <h5 class="p-2 bg-danger text-white shadow">Danh mục tin tức</h5>
        <div class="fb-page w-100" data-href="https://www.facebook.com/Choco.couplee/" data-tabs="timeline" data-width="" data-height="" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/Choco.couplee/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/Choco.couplee/">Choco Couple</a></blockquote></div>
    </div>
    <div class="col-md-9">
        <h4 class="title-news border-bottom shadow-sm p-2 mb-3">@Model.Name</h4>

        <div class="content-news">
            @Html.Raw(Model.Detail)
        </div>
    </div>
</div>

