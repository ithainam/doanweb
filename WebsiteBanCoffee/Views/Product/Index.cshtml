@model IEnumerable<WebsiteBanCoffee.Models.Product>
<link href="~/Content/Site.css" rel="stylesheet" />
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color:rgba(255,255,255,0.5); color:black">
    <h2 style="color:white"><div id="SanPham"> Menu </div></h2>

    <form asp-action="Index" method="get" class="form-inline">
        Nhập tên sản phẩm <input style="color:white" type="text" name="name" /> Giá từ<input type="number" name="to" /> Đến<input type="number" name="from" />  <button style="color:white">Tìm</button>

        <select name="id">
            <option value=1>Caffee</option>
            <option value=2>Trà</option>

        </select>
    </form>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="panel panel-default">



                    <div class="panel-body">
                        <div class="col-4">
                            <p id="anh"><img src="@Url.Content(item.image)" style="height:200px; width:180px"</p>
                        </div>
                        <p style="color:white">@item.name</p>
                        <p style="color:white">@item.description<p>
                        <p style="color:white">@item.sellPrice</p>

                    </div>
                    <h2 style="color:white">
                        <div class="panel-footer clearfix">

                            <div class="pull-left">


                                @*@Html.ActionLink("Chi tiết", "Details", new
                                    {
                                        id = item.Id
                                    }, new { @class = "btn btn-default" })*@

                                @Html.ActionLink("Chi tiết", "Details", "Product", new { productId = item.Id }, new { @class = "btn btn-primary form-control" })


                            </div>

                        </div>
                    </h2>
                </div>
            </div>
        }
    </div>

</div>
