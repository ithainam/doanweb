@model WebsiteBanCoffee.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="limiter">
    <div class="container-login100" style="background-image: url('~/Content/Login/images/bg-01.jpg');">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="wrap-login100 p-t-30 p-b-50">
                <span class="login100-form-title p-b-41">
                    Đăng Ký
                </span>
                <div class="text-success">
                    <p>
                        @ViewBag.Message
                    </p>
                </div>
                @Html.ValidationSummary("", new { @class = "text-danger" })
            <form class="login100-form validate-form p-b-33 p-t-5">

                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "input100", @placeholder = "Tài Khoản" })
                    <span class="focus-input100" data-placeholder="&#x1F464;"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Enter email">
                    @Html.TextBoxFor(m => m.Email, new { @class = "input100", @placeholder = "Email" })
                    <span class="focus-input100" data-placeholder="&#x2709;"></span>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    @Html.TextBoxFor(m => m.FullName, new { @class = "input100", @placeholder = "Họ và Tên" })
                    <span class="focus-input100" data-placeholder="&#x1F464;"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "input100", @placeholder = "Số Điện Thoại" })
                    <span class="focus-input100" data-placeholder="&#x1F4DE;"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    <div class="col-md-10" style="margin-left: 25%">
                        <label style="margin-right: 10px">&#9794; @Html.RadioButton("Gender", true, true) Nam</label>
                        <label>&#9792; @Html.RadioButton("Gender", false, false) Nữ</label>
                    </div>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    @Html.TextBoxFor(m => m.Address, new { @class = "input100", @placeholder = "Địa Chỉ" })
                    <span class="focus-input100" data-placeholder="&#x1F3E0;"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    @Html.TextBoxFor(m => m.Password, new { @class = "input100", @placeholder = "Mật Khẩu", type = "password" })
                    <span class="focus-input100" data-placeholder="&#x1F512;"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "input100", @placeholder = "Nhập Lại Mật Khẩu", type = "password" })
                    <span class="focus-input100" data-placeholder="&#x1F512;"></span>
                </div>

                <div class="container-login100-form-btn m-t-32">
                    <button class="login100-form-btn">
                        Đăng Ký
                    </button>
                </div>
            </form>
            </div>
        }
    </div>

</div>

<script src="~/Content/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
<script src="~/Content/Login/vendor/animsition/js/animsition.min.js"></script>
<script src="~/Content/Login/vendor/bootstrap/js/popper.js"></script>
<script src="~/Content/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Content/Login/vendor/select2/select2.min.js"></script>
<script src="~/Content/Login/vendor/daterangepicker/moment.min.js"></script>
<script src="~/Content/Login/vendor/daterangepicker/daterangepicker.js"></script>
<script src="~/Content/Login/vendor/countdowntime/countdowntime.js"></script>
<script src="~/Content/Login/js/main.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
