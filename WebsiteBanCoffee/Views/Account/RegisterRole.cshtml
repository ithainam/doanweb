@model WebsiteBanCoffee.Models.RegisterViewModel
@{
    ViewBag.Title = "RegisterRole";
}
<div style="background-color:rgba(255,255,255,0.7)">
    @using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h2>Gán Quyền Cho Người Dùng</h2>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Tên Các Tài Khoản", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("UserName")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Tên Các Quyền", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("Name")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" @*class="btn btn-default"*@ value="Gán" />
            </div>
        </div>
    }

</div>