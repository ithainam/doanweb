@model WebsiteBanCoffee.Models.Category

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CategoryDetails</title>
</head>
<body>
    @Html.Partial("SideNavBar")
    <div>
        <h4>Category</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.isLarge)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.isLarge)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.isMedium)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.isMedium)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.isSmall)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.isSmall)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.bonusPrice)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.bonusPrice)
            </dd>

        </dl>
    </div>
    <p class="text-center">
        <a href="@Url.Action("EditCategory","Admin", new {id = Model.Id})" class="btn btn-primary">Chỉnh sửa</a>
        <a href="@Url.Action("ListCategory","Admin")" class="btn btn-success">Trở về</a>
    </p>
</body>
</html>